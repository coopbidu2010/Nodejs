<div class="mt-4">
    <h3 style="color: royalblue;">Cập nhật hướng dẫn tướng</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên Tướng</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="image">Link Image</label>
            <input type="text" class="form-control" value="{{course.image}}" id="image" name="image">
        </div>
        <div class="form-group">
            <label for="description">Mô Tả</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="gemRed">Ngọc Đỏ</label>
            <input type="text" class="form-control" value="{{course.gemRed}}" id="gemRed" name="gemRed">
        </div>
        <div class="form-group">
            <label for="gemViolet">Ngọc Tím</label>
            <input type="text" class="form-control" value="{{course.gemViolet}}" id="gemViolet" name="gemViolet">
        </div>
        <div class="form-group">
            <label for="gemGreen">Ngọc Xanh</label>
            <input type="text" class="form-control" value="{{course.gemGreen}}" id="gemGreen" name="gemGreen">
        </div>
        <div class="form-group">
            <label for="imgSign">Link ImgSign</label>
            <input type="text" class="form-control" value="{{course.imgSign}}" id="imgSign" name="imgSign">
        </div>
        <div class="form-group">
            <label for="imgEquipment">Link ImgEquipment</label>
            <input type="text" class="form-control" value="{{course.imgEquipment}}" id="imgEquipment" name="imgEquipment">
        </div>
        <button type="submit" class="btn btn-primary">Lưu chỉnh sửa</button>
    </form>
</div>