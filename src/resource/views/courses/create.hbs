<div class="mt-4">
    <h3 style="color: royalblue;">Thêm tướng</h3>
    <form class= "mt-4" method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên Tướng</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="image">Link Image</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>
        <div class="form-group">
            <label for="description">Mô Tả</label>
            <textarea class="form-control" id="description" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video Id</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="gemRed">Ngọc Đỏ</label>
            <input type="text" class="form-control" id="gemRed" name="gemRed">
        </div>
        <div class="form-group">
            <label for="gemViolet">Ngọc Tím</label>
            <input type="text" class="form-control" id="gemViolet" name="gemViolet">
        </div>
        <div class="form-group">
            <label for="gemGreen">Ngọc Xanh</label>
            <input type="text" class="form-control" id="gemGreen" name="gemGreen">
        </div>
        <div class="form-group">
            <label for="imgSign">Link ImgSign</label>
            <input type="text" class="form-control" id="imgSign" name="imgSign">
        </div>
        <div class="form-group">
            <label for="imgEquipment">Link ImgEquipment</label>
            <input type="text" class="form-control" id="imgEquipment" name="imgEquipment">
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>